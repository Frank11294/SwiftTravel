<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebackg"
    android:orientation="vertical"
    tools:context="com.example.frankernesto.proyecto.ViajesActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/CREAR_VIAJE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear un Viaje" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/VIAJES_ALMACENADOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viajes Almacenados" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/OFERTAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ofertas especiales" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <Button
            android:id="@+id/Exit"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="?android:attr/actionModeCloseDrawable" />


    </LinearLayout>


</LinearLayout>

